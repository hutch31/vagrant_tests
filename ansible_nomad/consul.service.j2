        [Unit]
        Description=consul agent
        Requires=network-online.target
        After=network-online.target

        [Service]
        Restart=on-failure
        ExecStart=/usr/bin/consul agent -dev -node {{ inventory_hostname }}
        ExecReload=/bin/kill -HUP $MAINPID

        [Install]
        WantedBy=multi-user.target

